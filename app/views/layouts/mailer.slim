doctype transitional
html xmlns='http://www.w3.org/1999/xhtml'
  head
    title= "#{@subject}" || 'Invitation from KC and Kate'
    meta http-equiv='Content-Type' content='text/html; charset=utf-8'
    meta name='viewport' content='width=device-width, initial-scale=1.0'

    css:
      a{
        outline:none;
        color:#ffffff;
      }
      a:hover{
        color:#00a7c8;
        text-decoration:underline !important;
      }
      a[class='button']{
        text-decoration: none;
        text-transform:uppercase;
        background-color: rgba(256, 256, 256, 0.4);
        border: 4px solid #ffffff;
        padding:16px;
        color: #ffffff;
      }
      a[class='button']:hover{
        text-decoration: none !important;
        background-color: rgba(256, 256, 256, 0.6);
      }
      table td {border-collapse: collapse !important;}
      table td {
        font:20px/24px Helvetica, Arial, sans-serif;
        padding:0;
      }
      @media only screen and (max-width:500px) {
        table[class='site-mailer']{min-width:320px !important;}
        table[class='site-mailer__main']{width:100% !important;}
        td[class='site-mailer__main--fix-gmail']{
          display:none !important;
          width:0 !important;
          height:0 !important;
          padding:0 !important;
          font-size:0 !important;
          line-height:0 !important;
        }
        td[class="site-mailer__main__header"] img{
          width:100% !important;
          height:auto !important;
        }
        td[class='site-mailer__inner']{padding:0 !important;}
        td[class='site-mailer__main__body']{padding:16px 15px 30px !important;}
      }

