= content_for(:title, "KC and Kate | #{@event_name}")

= content_for(:flash)
  = render partial: 'shared/flash', locals: { filter: 'alert' }

= content_for(:modal)
  = render partial: 'shared/login_modal'
  = render partial: 'events/rsvp_modal'

  - if @plus_one
    = render partial: 'events/plus_one_modal'

